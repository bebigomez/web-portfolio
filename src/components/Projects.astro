---
import Button from '../components/Button.astro';

const navItems = [
  {
    title: 'modio Clothing Store',
    description:
      'An ecommerce platform for a fictional clothing store called modio. Users can browse through a wide range of clothing items, add them to their cart, and proceed to checkout. Built with a focus on user experience and smooth navigation.',
    image: '/projects/project-1.webp',
    url: 'https://modio-clothing-store.onrender.com/',
  },
  {
    title: 'ABA Blog app',
    credentials: "Login with username 'guestUser' and password 'SuperSecretPass'.",
    description:
      "A feature-rich blog application with user management capabilities, inspired by the exercise developed in the Full Stack Open course offered by the University of Helsinki. Users can sign up, create, like and comment on different posts.",
    image: '/projects/project-2.webp',
    url: 'https://aba-blog-app.onrender.com/',
  },
  {
    title: 'thoughts.',
    description:
      'A simple yet engaging platform where users from all around the world can discover and share some quick ideas, fostering creativity and inspiration across diverse cultures and backgrounds.',
    image: '/projects/project-3.webp',
    url: 'https://thoughts-p437.onrender.com/',
  },
];
---

<section id="projects" class="md:mb-24">
  <h1 class="text-2xl font-bold text-center mb-12 md:text-3xl">Projects</h1>
  <div class="md:max-w-5xl md:mx-auto mb-16">
    {
      navItems.map((project, index) => (
        <div class="md:flex my-6">
          <img
            src={project.image}
            alt={project.title}
            width="384"
            height="256"
            class="w-full h-auto md:w-96 md:h-72 md:rounded-2xl bg-gray-300"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold mb-4 text-center md:text-left">
              {project.title}
            </h3>
            {project.credentials && <p class="mb-5">{project.credentials}</p>}
            <p class="mb-5">{project.description}</p>
            <div class="text-center md:text-left">
              <Button href={project.url}>Try it out</Button>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>