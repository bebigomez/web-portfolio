---
import GitHub from "../components/icons/GitHub.astro"
import LinkedIn from "../components/icons/LinkedIn.astro"

const navItems = [
  {
    title: "Back to the start",
    label: "Go to start of the page.",
    url: "/#hero",
  },
  {
    title: "Projects",
    label: "projects",
    url: "/#projects",
  },
  {
    title: "Stack",
    label: "stack",
    url: "/#stack",
  },
]
---

<section id="footer" class="md:max-w-5xl mx-auto">
  <hr class="h-[2px] bg-gray-300 rounded" />
  <div class="p-4 md:flex md:justify-between md:items-center">
    <div class="flex justify-between md:justify-normal md:gap-4">
      {
        navItems.map((item) => (
          <a
            aria-label={item.label}
            href={item.url}
            class=" text-neutral-500 hover:text-black dark:text-neutral-200 dark:hover:text-neutral-300 transition-colors"
          >
            {item.title}
          </a>
        ))
      }
    </div>
    <div
      class="flex justify-between mt-4 md:mt-0 md:justify-normal md:gap-4 items-center"
    >
      <a
        href="mailto:vhgomez.py@gmail.com"
        class=" text-neutral-500 hover:text-black dark:text-neutral-200 dark:hover:text-neutral-300 transition-colors"
        >vhgomez.py@gmail.com</a
      >
      <div class="flex gap-2">
        <a
          href="https://github.com/bebigomez"
          target="_blank"
          rel="noopener"
          aria-label="bebigomez GitHub Page"
          ><GitHub
            class="h-5 w-5 transition-transform hover:scale-105 fill-current text-neutral-500 hover:text-black dark:text-neutral-200 dark:hover:text-neutral-300"
          /></a
        >
        <a
          href="https://www.linkedin.com/in/victorgomezdev/"
          target="_blank"
          rel="noopener"
          aria-label="Victor Gomez LinkedIn Page"
          ><LinkedIn
            class="h-5 w-5 transition-transform hover:scale-105 fill-current text-neutral-500 hover:text-black dark:text-neutral-200 dark:hover:text-neutral-300"
          /></a
        >
      </div>
    </div>
  </div>
</section>
